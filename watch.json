{
  "install": {
    "include": [
      "^package\\.json$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^data/",
      ".*dist.*/"
    ],
    "include": [
      "\\.ts$",
      "\\.js$",
      "\\.json$",
      "\\.md$",
      "\\.sh$",
      "\\.sass$",
      "\\.scss$"
    ]
  },
  "throttle": 1000
}
